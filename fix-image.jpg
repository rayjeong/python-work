#!/usr/bin/env python3

import os
import sys
from PIL import Image


path = './images'
target = '/opt/icons/'

for file in os.listdir(path):
  current = os.path.join(path, file)
  print(current)
  if not os.path.isdir(target):
     os.mkdir(target)
  if os.path.isfile(current):
     im = Image.open(current)
     im.convert('RGB').rotate(90).resize((128,128)).save(target + file,"JPEG")
